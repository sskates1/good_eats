<h3><%= @restaurant.name %></h3>

<ul>
  <li>Category: <%= @restaurant.category %></li>
</ul>
<%= @restaurant.address %>
<%= @restaurant.city %>
<%= @restaurant.state %>
<%= @restaurant.zip %>

<div>
  <%= @restaurant.description %>
</div>

<hr>
<h4>Reviews</h4>
<% @restaurant.reviews.each do |review| %>
  <%= review.rating %>
  <p class='small'>
   <%= review.body %>
   <br>
   posted on: <%= l review.created_at, format: :long%>
  </p>
<%end%>

<% if @review.errors.any? %>
  <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<hr>
<h5>Post New review</h5>
<%= form_for [@restaurant, @review] do |f| %>
  <%= f.label :rating  %>(1-5):
  <%= f.text_field :rating %><br>

  <%= f.label :body %>:
  <%= f.text_area :body %><br>

  <%= f.submit %>
<% end %>
